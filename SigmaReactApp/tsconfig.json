{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",     
    "jsx": "react-jsx",   
    "moduleResolution": "node",  
    "baseUrl": "./src",                     
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                                     
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["components/*"]
    }                               
  }
}
